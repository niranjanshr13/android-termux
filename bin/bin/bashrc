echo "source $HOME/android-termux/bin/bin/bashrc" > $HOME/.bashrc

# set variable.
unset HISTFILE

# alias.
alias q='exit'
alias b='byobu'

# scripts.
rm -f $HOME/.vim $HOME/.viminfo


# demon
## sshd daemon
nohup bash $HOME/android-termux/bin/bin/ssh_daemon.sh >/dev/null 2>&1 &

## cloudflared
nohup bash $HOME/android-termux/bin/bin/cloudflared_auto_start >/dev/null 2>&1 &

## tinycam uploader
### if server create a file on this path.
if [[ -f "$HOME/storage/shared/server" ]]
then
nohup bash $HOME/android-termux/bin/bin/tinycam_uploader.daemon.sh > /dev/null 2>&1 &
fi

## git self update
nohup bash $HOME/android-termux/bin/bin/git_self_update.daemon.sh > /dev/null 2>&1 &

## auto restart daemon
nohup bash $HOME/android-termux/bin/bin/auto_restart.daemon.sh > /dev/null 2>&1 &

# transferring to its place.
bash $HOME/android-termux/bin/bin/transfer.sh

#curl -s "https://raw.githubusercontent.com/niranjanshr13/android-termux/main/auto_get.sh" | bash